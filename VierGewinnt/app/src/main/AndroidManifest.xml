<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="julian.viergewinnt">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="julian.viergewinnt.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="julian.viergewinnt.screens.DifficultySelection"></activity>
        <activity
            android:name="julian.viergewinnt.screens.game.Game"
            android:label="@string/title_activity_game"
            android:parentActivityName="julian.viergewinnt.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="julian.viergewinnt.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>